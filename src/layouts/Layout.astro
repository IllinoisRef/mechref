---
import Navbar from '../components/Navbar.astro';
import SidebarContainer from '../components/SidebarContainer.astro';
import Searchbar from '../components/Searchbar.astro';

const { title } = Astro.props;

const current_path = Astro.url;
const split_ = current_path.pathname.split('/')
const cleaned = split_.slice(1, split_.length)

const course = cleaned[0]
const pagename = cleaned[1]
---

<!doctype html>
<html lang="en" class="w-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image" href="/favicon2.png" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>

		<link href="/bootstrap.min.css" rel="stylesheet">


		<script src="/bootstrap.min.js" is:inline></script>

		<script id="MathJax-script" src="/mathjax/tex-chtml.js" is:inline></script>


		
		<script src="/jquery-2.1.4.min.js" is:inline></script>
		<script src="/sha1.js" is:inline></script>
		<script src="/sylvester.js" is:inline></script>
		<script src="/PrairieGeom.js" is:inline></script>
		<script src="/PrairieDraw.js" is:inline></script>
		
		
		<script src="/static/js/simplified_view.js" is:inline></script>
		
		<link rel="stylesheet" href="/static/css/main.css">
		<link rel="stylesheet" href="/static/css/sidebar.css">
	
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-2YD4TR8K2S"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-2YD4TR8K2S');
		</script>
	</head>
	<body class="w-100">
		<Navbar/>
		<div class="container-xxl content mb-5">
			<SidebarContainer page={pagename} course={course}>
				<slot name="navtree" />
			</SidebarContainer>
			<div class="w-100 pt-0 pt-xl-3">
				<div class="w-100 mb-3">
					<Searchbar/>
				</div>
				<slot />
			</div>

		</div>
	</body>
</html>
<style is:global>
	:root {
		--illini-orange: #E84A27;
		--illini-blue: #13294B;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--text-main: black;
        --text-secondary: #4a4a4a;
		--text-tertiary: #666;
	}

	mjx-container{
		max-width: 90vw;
	}

	.highlighter{
		background-color: coral;
	}

	body {
		font-size: 1.1rem;
	}

	.callout-grid{
		display: grid;
		grid-template-columns: 1fr;
	}

	.content{
		display: grid;
		grid-template-columns: 1fr;
	}


	.subsection{
        color: var(--text-main);
    }

    .subsubsection{
        color:var(--text-secondary);
    }

	.subsubsubsection{
        color:var(--text-tertiary);
    }

	@media (min-width: 1200px){
		.content{
			grid-template-columns: 1fr 5fr;
		}
	}

	@media (min-width: 992px){
		.callout-grid{
			grid-template-columns: 20fr 7fr;
		}
	}
</style>
