---
const {id, height, width, show_border="True"} = Astro.props;

import Center from "./Center.astro";
---

<style>
    .canvas-container{
        border: solid 1px;
        border-color:  black;
    }
</style>

<div class="d-flex flex-column align-items-center w-100">
    <canvas id={id} height={height} width={width} class={show_border=='True' ? "canvas-container" : ''}></canvas>
    <div class="w-100">
        <Center>
            <slot />
        </Center>
    </div>
</div>
