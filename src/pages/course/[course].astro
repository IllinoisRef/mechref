---
export function getStaticPaths() {
  return [
    {params: {course: 'dyn'}},
    {params: {course: 'sol'}},
    {params: {course: 'sta'}},
  ];
}

const { course } = Astro.params;

import Layout from '../../layouts/Layout.astro';
import CardGrid from '../../components/CardGrid.svelte';

const course_tags = {
        'dyn': 'Dynamics',
        'sol': 'Solid Mechanics',
        'sta': 'Statics' 
    }

const course_name = course_tags[course]
---

<Layout title={course_name}>
    <CardGrid target_course={course_name}/>
</Layout>
