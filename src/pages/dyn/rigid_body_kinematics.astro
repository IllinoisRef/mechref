            <input type="radio" name="rkg-fr-c-showType" value="position" class="data-input:rkg-fr-c:showType" onchange="rkg_fr_c.setOption('showType', this.value);"/>
            position
            <input type="radio" name="rkg-fr-c-showType" value="velocity" class="data-input:rkg-fr-c:showType" onchange="rkg_fr_c.setOption('showType', this.value);"/>
